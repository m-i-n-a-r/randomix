<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diceZone"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_button_height"
    android:layout_marginBottom="@dimen/linear_vertical_margin"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/diceButtonAnimation1"
        android:layout_width="@dimen/image_button_height"
        android:layout_height="@dimen/image_button_height"
        android:layout_marginTop="@dimen/linear_vertical_margin"
        android:paddingBottom="@dimen/linear_vertical_padding"
        android:contentDescription="@string/throw_dice"
        android:src="@drawable/dice_1_vector_animation" />

    <ImageView
        android:id="@+id/diceButtonAnimation2"
        android:layout_width="@dimen/image_button_height"
        android:layout_height="@dimen/image_button_height"
        android:layout_marginTop="@dimen/linear_vertical_margin"
        android:paddingBottom="@dimen/linear_vertical_padding"
        android:contentDescription="@string/throw_dice"
        android:src="@drawable/dice_1_vector_animation" />

</LinearLayout>