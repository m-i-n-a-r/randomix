<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.minar.randomix.utilities.CustomAuthorPreference
        android:layout="@layout/fragment_settings"
        android:selectable="false" />

    <PreferenceCategory
        android:key="app_behavior"
        android:title="@string/app_behavior"
        app:icon="@drawable/ic_app_behavior_24dp">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="shake"
            android:summaryOff="@string/shake_description_off"
            android:summaryOn="@string/shake_description_on"
            android:title="@string/shake_name"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="rude_answers"
            android:summaryOff="@string/rude_answers_description_off"
            android:summaryOn="@string/rude_answers_description_on"
            android:title="@string/rude_answers_name"
            app:iconSpaceReserved="false" />

        <!-- TODO Remove entirely
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/diceNumber"
            android:entryValues="@array/diceNumberValues"
            android:key="dice_number"
            android:summary="@string/dice_number_description"
            android:title="@string/dice_number_name"
            app:iconSpaceReserved="false" />-->

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="hide_descriptions"
            android:summaryOff="@string/hide_descriptions_description_off"
            android:summaryOn="@string/hide_descriptions_description_on"
            android:title="@string/hide_descriptions_name"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="allow_equals"
            android:summaryOff="@string/allow_equals_description_off"
            android:summaryOn="@string/allow_equals_description_on"
            android:title="@string/allow_equals_name"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="remove_last"
            android:summaryOff="@string/remove_last_description_off"
            android:summaryOn="@string/remove_last_description_on"
            android:title="@string/remove_last_name"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="customization"
        android:title="@string/customization"
        app:icon="@drawable/ic_customization_24dp">

        <ListPreference
            android:defaultValue="system"
            android:entries="@array/themes"
            android:entryValues="@array/themeValues"
            android:key="theme_color"
            android:summary="@string/theme_description"
            android:title="@string/theme_name"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:defaultValue="blue"
            android:entries="@array/accents"
            android:entryValues="@array/accentValues"
            android:key="accent_color"
            android:summary="@string/accent_description"
            android:title="@string/accent_name"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="vibration"
            android:summaryOff="@string/vibration_description_off"
            android:summaryOn="@string/vibration_description_on"
            android:title="@string/vibration_name"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="sound"
            android:summaryOff="@string/sound_description_off"
            android:summaryOn="@string/sound_description_on"
            android:title="@string/sound_name"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>